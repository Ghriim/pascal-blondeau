<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Pascal Blondeau{% endblock %}</title>

        {% block stylesheets %}
            {% include "::components/_stylesheets.html.twig" %}
        {% endblock %}

        {% block icons %}
            {% include "::components/_icons.html.twig" %}
        {% endblock %}
    </head>
    <body>
        <header class="container text-center">
            <h1>
                <a href="{{ path('slide_show_public_display') }}" title="{{ 'header.backToHome.title' | trans({}, 'layout') }}">
                    {{ 'header.title' | trans({}, 'layout') }}
                </a>
            </h1>

            <h2>
                <a href="{{ path('slide_show_public_display') }}" title="{{ 'header.backToHome.title' | trans({}, 'layout') }}">
                    {{ 'header.baseline' | trans({}, 'layout') }}
                </a>
            </h2>

            <nav>
                {% block navigation %}
                    {% include "::components/_navigationPublic.html.twig" %}
                {% endblock %}
            </nav>
        </header>

        <div class="container padding-top">
            {% for type, messages in app.session.flashBag.all() %}
                {% for message in messages %}
                    <div class="alert alert-dismissable alert-{{ type }}">
                        <button type="button" class="close" data-dismiss="alert">
                            <span class="fa fa-times"></span>
                        </button>

                        <p>
                            {{ message|raw }}
                        </p>
                    </div>
                    <div class="cb"></div>
                {% endfor %}
            {% endfor %}
        </div>

        <main class="container padding-y">
            {% block body %}{% endblock %}
        </main>

        <footer class="container text-center">
            {% include "::components/_footer.html.twig" %}
        </footer>

        {% block javascripts %}
            {% include "::components/_javascripts.html.twig" %}
        {% endblock %}
    </body>
</html>
