{% trans_default_domain "adminPressArticle" %}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">{{ 'form.delete.modal.title' | trans({}) }}</h4>
        </div>

        <div class="modal-body">
            {{ 'form.delete.modal.content' | trans({}) | raw }}
        </div>

        <div class="submits modal-footer text-right">
            <button type="button" class="btn btn-default" data-dismiss="modal">
                <span class="fa fa-times"></span>
                {{ 'form.delete.modal.action.cancel' | trans({}) }}
            </button>

            <form action="{{ path('admin_press_articles_delete', {'id': pressArticle.id}) }}" method="post" class="form-delete">
                <input type="hidden" name="_method" value="delete">
                <button type="submit" class="btn btn-primary">
                    <span class="fa fa-trash-o"></span>
                    {{ 'form.delete.modal.action.confirm' | trans({}) }}
                </button>
            </form>
        </div>
    </div>
</div>
