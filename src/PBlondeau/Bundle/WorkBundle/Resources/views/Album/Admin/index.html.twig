{% extends "::layout.html.twig" %}

{% trans_default_domain "adminWork" %}

{% block body %}
     <div class="row">
        <div class="col-md-10">
            {{ 'list.album.count' | trans({'%numberOfAlbum%': albums.getTotalItemCount}) }}
        </div>

        <div class="col-md-2 text-right">
            <button class="btn btn-default" data-toggle="modal" data-target="#add-form">
                <span class="fa fa-plus"></span>{{ 'list.action.add' | trans({}) }}
            </button>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{ 'list.album.header.image' | trans({}) }}</th>
                <th>{{ 'list.album.header.status' | trans({}) }}</th>
                <th>{{ 'list.album.header.creation' | trans({}) }}</th>
                <th>{{ 'list.album.header.actions' | trans({}) }}</th>
            </tr>
        </thead>

        <tbody>
            {% for album in albums %}
                <tr>
                    <td><img src="{{ album.cover }}" alt="" /></td>
                    <td>
                        <span class="badge status-{{ album.status }}">
                            {{ ('list.album.body.status.' ~ album.status) | trans({}) }}
                        </span>
                    </td>
                    <td>{{ album.creation|date('d-m-Y') }}</td>
                    <td>
                        <ul class="list-inline">
                            <li>
                                <a href="" title="{{ 'list.album.body.action.edit' | trans({}) }}">
                                    <span class="fa fa-pencil"></span>{{ 'list.album.body.action.edit' | trans({}) }}</a>
                            </li>

                            <li>
                                <button class="btn btn-link" data-toggle="modal" data-target="#delete-modal-{{ album.id }}">
                                    <span class="fa fa-times-circle"></span>{{ 'list.album.body.action.delete' | trans({}) }}
                                </button>

                                <div id="delete-modal-{{ album.id }}" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
                                    {% include "PBlondeauSlideShowBundle:Album/Admin:deleteModal.html.twig" %}
                                </div>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="">{{ 'list.album.empty' | trans({}) }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(albums) }}
    </div>

    <div id="add-form" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
        {% include "PBlondeauSlideShowBundle:Album/Admin:saveForm.html.twig" with {'form': form} only %}
    </div>
{% endblock %}
