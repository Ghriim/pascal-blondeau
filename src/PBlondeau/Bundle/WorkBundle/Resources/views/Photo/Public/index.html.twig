{% extends '::layout.html.twig' %}

{% trans_default_domain "publicWorkPhoto" %}

{% block body %}
    <section id="albums">
        {% for album in albums %}
            <article class="album margin-bottom">
                <img class="img-max-height-fix" src="{{ asset(album.webPath) }}" alt="" />
                <div class="title">
                    <label>{{ album.title }}</label>
                </div>
            </article>
        {% else %}
            <div class="text-center text-italic">
                {{ 'list.photo.empty' | trans({}) }}
            </div>
        {% endfor %}
    </section>

    <div class="paginator">
        {{ knp_pagination_render(albums) }}
    </div>
{% endblock %}