{% extends "::adminLayout.html.twig" %}

{% trans_default_domain "adminSlideShow" %}

{% block body %}
    <div class="row">
        <div class="col-md-10">
            {{ 'list.slide.count' | trans({'%numberOfSlide%': slides.getTotalItemCount}) }}
        </div>

        <div class="col-md-2 text-right">
            <a href="" class="btn btn-default">
                {{ 'list.action.add' | trans({}) }}
            </a>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>{{ 'list.slide.header.image' | trans({}) }}</th>
                <th>{{ 'list.slide.header.status' | trans({}) }}</th>
                <th>{{ 'list.slide.header.creation' | trans({}) }}</th>
            </tr>
        </thead>

        <tbody>
            {% for slide in slides %}
                <tr>
                    <td><img /></td>
                    <td>{{ slide.status }}</td>
                    <td>{{ slide.creation|date('d-m-Y') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="">{{ 'list.slide.empty' | trans({}) }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(slides) }}
    </div>

    <div id="add-form">
        {% include "PBlondeauSlideShowBundle:SlideShow/Admin:form.html.twig" with {'form': form} only %}
    </div>
{% endblock %}